
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "no-underscore-dangle": "off"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "env": {
                "mocha": true
            },
            "rules": {
                "func-names": "off",
                "prefer-arrow-callback": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    }
}

{
    "$schema": "http://json-schema.org/schema#",
    "$id": "http://example.com/create.json",
    "title": "Create User Schema",
    "description": "For validating client-provided create user object",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "format": "email"
        },
        "digest": { 
            "type": "string",
            "pattern": "."
        },
        "profile": {
            "$ref": "profile.json#"
        }
    },
    "required": ["email", "digest"],
    "additionalProperties": false
}